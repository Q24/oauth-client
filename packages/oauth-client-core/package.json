{
  "name": "@ilionx/oauth-client-core",
  "version": "1.0.3",
  "private": false,
  "description": "OAuth client for implicit and code flow with PKCE",
  "author": "ilionx",
  "email": "info@ilionx.com",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/Q24/oauth-client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Q24/oauth-client.git"
  },
  "bugs": {
    "url": "https://github.com/Q24/oauth-client/issues"
  },
  "keywords": [
    "oidc",
    "openid",
    "oauth",
    "oauth2",
    "implicit",
    "code flow"
  ],
  "devDependencies": {
    "@swc/core": "^1.2.248",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^29.0.0",
    "eslint": "^8.23.0",
    "eslint-config-custom": "*",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "tsconfig": "*",
    "typedoc": "^0.23.13",
    "typedoc-plugin-markdown": "^3.13.5",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "watch": "parcel watch",
    "build": "parcel build && npm run copyCleanHashFragment && npm run typedoc",
    "lint": "eslint *.ts*",
    "prepublishOnly": "npm run build",
    "copyCleanHashFragment": "cp ./clean-hash-fragment.js dist/clean-hash-fragment.js",
    "typedoc": "rm -rf docs && typedoc ./src/index.ts",
    "test": "npx jest --watch",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch"
  },
  "source": "./src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  }
}
